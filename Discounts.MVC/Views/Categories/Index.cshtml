@model IEnumerable<CategoryResponseDto>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<p><a asp-action="Create" class="btn btn-primary">Create New Category</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@(category.Description ?? "N/A")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
